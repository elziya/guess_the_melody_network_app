<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane styleClass="main-theme"
            stylesheets="@../css/project.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.kpfu.itis.controllers.RegisterController">

   <children>
      <VBox alignment="CENTER"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0">

         <Text strokeType="OUTSIDE"
               strokeWidth="0.0"
               styleClass="header-text-theme"
               text="Введите имя"
               textAlignment="CENTER"
               wrappingWidth="290">
               <VBox.margin>
                  <Insets bottom="50.0"
                          left="50.0"
                          right="50.0"
                          top="50.0" />
               </VBox.margin>
         </Text>
         <BorderPane
                 maxHeight="-Infinity"
                 maxWidth="-Infinity"
                 prefHeight="70.0"
                 prefWidth="350.0"
                 style="-fx-background-color: FFBF00; -fx-background-radius: 40;"
                 styleClass="shadow">
            <center>
               <TextField id="inputName"
                          fx:id="nickName"
                          minHeight="-Infinity"
                          minWidth="-Infinity"
                          prefHeight="60.0"
                          prefWidth="300.0"
                          style="-fx-background-color: FFF778; -fx-background-radius: 40;">
                  <BorderPane.margin>
                     <Insets bottom="2.0" left="10.0" right="10.0" top="2.0" />
                  </BorderPane.margin></TextField>
            </center>
            <VBox.margin>
               <Insets bottom="50.0"
                       left="150.0"
                       right="150.0"
                       top="50.0" />
            </VBox.margin>
         </BorderPane>
         <Button id="nextBtn"
                 onAction="#setNickname"
                 mnemonicParsing="false"
                 prefHeight="60.0"
                 prefWidth="250.0"
                 styleClass="my-button"
                 text="Продолжить">
            <VBox.margin>
               <Insets bottom="50.0"
                       left="50.0"
                       right="50.0" />
            </VBox.margin>
         </Button>
      </VBox>
   </children>
</AnchorPane>

